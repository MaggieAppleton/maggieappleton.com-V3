---
import { Image } from "astro:assets";
import type { ImageMetadata } from 'astro';

interface Props {
	src: ImageMetadata;
	alt: string;
	width?: string;
	showalt?: boolean;
	margin?: string;
	sourceUrl?: string;
	sourceTitle?: string;
	srcSet?: string;
}

const {
	src,
	alt,
	width,
	showalt,
	margin,
	sourceUrl,
	sourceTitle,
	srcSet,
	...props
} = Astro.props;
---

<figure
	class="container"
	style={`margin: ${margin || "var(--space-l) auto"}`}
	{...props}
>
	<Image
		src={src}
		alt={alt}
		width={width ? parseInt(width) : undefined}
	/>
	{
		showalt &&
			(sourceUrl ? (
				<figcaption>
					{alt} â€“ Source: <a href={sourceUrl}>{sourceTitle}</a>
				</figcaption>
			) : (
				<figcaption>{alt}</figcaption>
			))
	}
</figure>

<style>
	.container {
		max-width: 100%;
		grid-column: 1 / 4 !important;
		text-align: center;
	}

	figcaption {
		font-family: var(--font-sans);
		font-size: var(--font-size-sm);
		color: var(--color-gray-600);
		line-height: 1.5;
		width: 100%;
		max-width: 800px;
		margin: var(--space-s) auto 0;
	}

	img {
		width: 1100px;
		max-width: 100%;
		margin: 0 auto var(--space-xs);
		border-radius: var(--border-radius-sm);
	}

	@media (max-width: 768px) {
		.container {
			margin: var(--space-s) auto;
		}
	}
</style>
