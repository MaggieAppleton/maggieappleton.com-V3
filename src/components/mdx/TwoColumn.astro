---
const {
	maxWidth,
	alignItems,
	gridTemplateColumns,
	gridGap,
	justifyItems,
	margin,
} = Astro.props;
---

<div
	class="two-column-container"
	style={{
		maxWidth: maxWidth || "1400px",
		margin: margin || "var(--space-s) auto var(--space-l)",
		justifyItems: justifyItems || "center",
		gridTemplateColumns: gridTemplateColumns || "repeat(2, minmax(280px, 1fr))",
		gridGap: gridGap || "var(--space-xs)",
		alignItems: alignItems || "center",
	}}
>
	<slot />
</div>

<style>
	.two-column-container {
		width: 100%;
		grid-column: 1 / 4 !important;
		display: grid;
		padding: 0 var(--space-3xs);
		overflow-x: hidden;
	}

	.two-column-container :global(p) {
		font-size: var(--font-size-base);
		line-height: var(--leading-looser);
		margin-bottom: var(--space-m);
	}

	@media (max-width: 768px) {
		.two-column-container {
			align-items: start;
			justify-items: center;
			grid-template-columns: 1fr !important;
			grid-gap: var(--space-xs);
			max-width: 100%;
			padding: 0;
		}
	}

	.two-column-container :global(div),
	.two-column-container :global(img),
	.two-column-container :global(figure),
	.two-column-container :global(picture) {
		grid-column: auto !important;
		margin: 0 auto;
		border-radius: var(--border-radius-base);
		max-width: 100%;
		height: auto;
		width: 100%;
	}

	.two-column-container :global(img) {
		margin: var(--space-s) auto 0;
		width: 100%;
		height: auto;
		max-width: 100%;
	}
</style>
