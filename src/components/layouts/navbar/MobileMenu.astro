---
import { Icon } from "astro-icon/components";
import Logo from "../../animated-icons/Logo.astro";
---

<div class="mobile-menu" transition:persist>
	<a href="/" aria-label="home">
		<span class="visually-hidden">Home</span>
		<Logo />
	</a>
	<button class="styled-button" id="open-menu" aria-label="open menu">
		<Icon name="heroicons:bars-3" size={24} />
	</button>

	<div class="full-page-menu" id="menu">
		<div class="mobile-header">
			<a href="/" aria-label="home">
				<span class="visually-hidden">Home</span>
				<Logo />
			</a>
			<button class="styled-button" id="close-menu" aria-label="close menu">
				<Icon name="heroicons:x-mark" size={24} />
			</button>
		</div>
		<div class="link-container">
			<a href="/garden" class="link-button">The Garden</a>
			<a href="/essays" class="link-button">Essays</a>
			<a href="/notes" class="link-button">Notes</a>
			<a href="/library" class="link-button">Library</a>
			<a href="/now" class="link-button">Now</a>
			<a href="/about" class="link-button">About</a>
		</div>
	</div>
</div>

<style>
	.mobile-menu {
		display: none;
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		padding: var(--space-2xs);
		z-index: 9999;
		justify-content: space-between;
		align-items: center;
		background-color: var(--color-cream);
	}

	@media screen and (max-width: 550px) {
		.mobile-menu {
			display: flex;
		}
	}

	.full-page-menu {
		position: fixed;
		inset: 0;
		background-color: var(--color-cream);
		opacity: 0;
		visibility: hidden;
		transition:
			opacity 0.3s ease 0.2s,
			visibility 0.3s ease 0.2s;
	}

	.full-page-menu.open {
		opacity: 1;
		visibility: visible;
	}

	.full-page-menu.open .link-container {
		opacity: 1;
		transform: translateY(0);
		transition-delay: 0.1s;
	}

	.link-container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		height: 100%;
		gap: var(--space-m);
		padding: var(--space-m);
		opacity: 0;
		transform: translateY(10px);
		transition:
			opacity 0.2s ease,
			transform 0.2s ease;
	}

	.link-button {
		color: var(--color-crimson);
		font-size: var(--font-size-lg);
		font-family: var(--font-serif);
		text-decoration: none;
		transition: transform 0.2s ease;
	}

	.link-button:hover {
		transform: translateY(-2px);
	}

	.styled-button {
		border: none;
		background: none;
		cursor: pointer;
		padding: 4px;
	}

	.mobile-header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		padding: var(--space-2xs);
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
</style>

<script>
	function initializeMobileMenu() {
		const menu = document.getElementById("menu");
		const openButton = document.getElementById("open-menu");
		const closeButton = document.getElementById("close-menu");

		if (!openButton || !closeButton) return;

		const oldOpen = openButton.cloneNode(true);
		const oldClose = closeButton.cloneNode(true);

		openButton.parentNode?.replaceChild(oldOpen, openButton);
		closeButton.parentNode?.replaceChild(oldClose, closeButton);

		oldOpen.addEventListener("click", () => menu?.classList.add("open"));
		oldClose.addEventListener("click", () => menu?.classList.remove("open"));
	}

	initializeMobileMenu();
	document.addEventListener("astro:page-load", initializeMobileMenu);
</script>
