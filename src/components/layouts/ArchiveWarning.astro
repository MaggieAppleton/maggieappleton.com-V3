---
import type { CollectionEntry } from "astro:content";
import { Icon } from "astro-icon/components";
import { getVersionInfo, getVersionFromEntry, isArchivedVersion } from "../../utils/versionUtils";
import { getCollection } from "astro:content";

type VersionedContent = CollectionEntry<"essays"> | CollectionEntry<"notes"> | CollectionEntry<"patterns"> | CollectionEntry<"talks">;

interface Props {
  entry: VersionedContent;
}

const { entry } = Astro.props;

// Get all entries of the same collection type to find versions
let allEntries: VersionedContent[] = [];
switch (entry.collection) {
  case "essays":
    allEntries = await getCollection("essays") as VersionedContent[];
    break;
  case "notes":
    allEntries = await getCollection("notes") as VersionedContent[];
    break;
  case "patterns":
    allEntries = await getCollection("patterns") as VersionedContent[];
    break;
  case "talks":
    allEntries = await getCollection("talks") as VersionedContent[];
    break;
}

const versionInfo = getVersionInfo(entry, allEntries);
const isArchived = isArchivedVersion(entry, allEntries);
const currentVersion = versionInfo.version;
const totalVersions = versionInfo.allVersions.length;
const canonicalUrl = `/${versionInfo.baseSlug}`;

// Only show warning if this is an archived version
const showWarning = isArchived && totalVersions > 1;
---

{showWarning && (
  <div class="archive-warning">
    <div class="warning-content">
      <div class="warning-icon">
        <Icon name="heroicons:exclamation-triangle" size={20} />
      </div>
      <div class="warning-text">
        <p class="warning-title">
          You're viewing an older version (v{currentVersion} of {totalVersions})
        </p>
        <p class="warning-subtitle">
          This content may be outdated. There's a newer version available.
        </p>
      </div>
      <div class="warning-action">
        <a href={canonicalUrl} class="view-current-btn">
          View current version
          <Icon name="heroicons:arrow-right" size={16} />
        </a>
      </div>
    </div>
  </div>
)}

<style>
  .archive-warning {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border: 1px solid #f59e0b;
    border-radius: 8px;
    margin: var(--space-l) 0;
    box-shadow: 0 1px 3px rgba(245, 158, 11, 0.1);
  }
  
  .warning-content {
    display: flex;
    align-items: center;
    gap: var(--space-m);
    padding: var(--space-m);
  }
  
  .warning-icon {
    flex-shrink: 0;
    color: #d97706;
  }
  
  .warning-text {
    flex-grow: 1;
    min-width: 0;
  }
  
  .warning-title {
    font-family: var(--font-sans);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: #92400e;
    margin: 0 0 var(--space-2xs) 0;
    line-height: var(--leading-tight);
  }
  
  .warning-subtitle {
    font-family: var(--font-sans);
    font-size: var(--font-size-xs);
    color: #a16207;
    margin: 0;
    line-height: var(--leading-relaxed);
  }
  
  .warning-action {
    flex-shrink: 0;
  }
  
  .view-current-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2xs);
    padding: var(--space-xs) var(--space-s);
    background: #d97706;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-family: var(--font-sans);
    font-size: var(--font-size-xs);
    font-weight: 500;
    transition: all 0.2s ease;
    white-space: nowrap;
  }
  
  .view-current-btn:hover {
    background: #b45309;
    transform: translateY(-1px);
    box-shadow: 0 2px 4px rgba(212, 159, 17, 0.2);
  }
  
  .view-current-btn:active {
    transform: translateY(0);
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .warning-content {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-s);
      padding: var(--space-s);
    }
    
    .warning-icon {
      align-self: flex-start;
    }
    
    .warning-action {
      align-self: stretch;
    }
    
    .view-current-btn {
      justify-content: center;
      width: 100%;
    }
  }
  
  @media (max-width: 480px) {
    .warning-content {
      flex-direction: row;
      align-items: center;
    }
    
    .warning-text {
      min-width: 0;
    }
    
    .warning-title {
      font-size: var(--font-size-xs);
    }
    
    .warning-subtitle {
      display: none; /* Hide subtitle on very small screens */
    }
    
    .warning-action {
      align-self: center;
    }
    
    .view-current-btn {
      padding: var(--space-2xs) var(--space-xs);
      font-size: 10px;
      width: auto;
    }
  }
</style>